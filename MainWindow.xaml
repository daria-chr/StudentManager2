<Window x:Class="StudentManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentManager"
        mc:Ignorable="d"
        Title="SQLite Demo" Height="350" Width="400">
    <Grid Margin="15" Background="#f0f0f0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="102"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Student Manager"
                   FontSize="20"
                   FontWeight="Bold" 
                   Foreground="#2c3e50"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"
                   Width="164"/>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    Margin="0,0,0,10">
            <TextBox x:Name="InputName"
                     Width="200"
                     Height="30" 
                     Margin="0 0 10 0"
                     Background="White"
                     BorderBrush="#bdc3c7"/>
            <Button Content=" Добавить"
                    Width="109"
                    Height="25" 
                    Background="#27ae60"
                    Foreground="White"
                    Click="Add_Click"/>
        </StackPanel>

        <Button Content="Удалить выбранное"
                Background="#e74c3c"
                Foreground="White"
                Click="Delete_Click"
                Margin="198,64,27,10"
                Grid.Row="1"/>

        <DataGrid x:Name="DataGridPeople"
                  Grid.Row="1" 
                  Background="White"
                  AutoGenerateColumns="True"
                  Margin="0,100,0,0"
                  Grid.RowSpan="2"/>
    </Grid>


</Window>
